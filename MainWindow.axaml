<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VSPaint.MainWindow"
        Title="VSPaint">
	
	<!--title bar-->
	<StackPanel>
		<Border DockPanel.Dock="Top"
		BorderBrush="#222222"
		BorderThickness="1">
			<Menu Background="#301934">
				<MenuItem Width="50"
					Theme="{StaticResource TitleBarButton}" 
						  Header="File">
					<MenuItem Theme="{StaticResource TitleBarButtonChild}" Header="Add 1" Width="200"/>
					<MenuItem Theme="{StaticResource TitleBarButtonChild}" Header="Add 2" Width="200"/>
					<MenuItem Theme="{StaticResource TitleBarButtonChild}" Header="Add 3" Width="200"/>
				</MenuItem>
				<MenuItem Width="50"
						Theme="{StaticResource TitleBarButton}" Header="Edit">
					<MenuItem Theme="{StaticResource TitleBarButtonChild}" Header="Add 1" Width="200"/>
					<MenuItem Theme="{StaticResource TitleBarButtonChild}" Header="Add 2" Width="200"/>
					<MenuItem Theme="{StaticResource TitleBarButtonChild}" Header="Add 3" Width="200"/>
				</MenuItem>
			</Menu>
		</Border>
	</StackPanel>

</Window>
